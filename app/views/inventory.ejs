              integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">


  </head>
  <h1>LISTA DE JUGADORES DISPONIBLES</h1>
  <a href="/logout">Logout</a>
  <br>
  <td> <a href="/api/v1/players/add">AÃ±adir nuevo Jugador</a>  </td>



 <table class="table table-striped">
     <thead class="thead-dark">
     <tr>
         <th>ID</th>
         <th>Nombre</th>
         <th>Fecha de Nacimiento</th>
         <th>Nacionalidad</th>
         <th>ID del Equipo</th>
         <th>Posicion</th>
         <th>Numero</th>
         <th>ID de la Liga</th>
     </tr>
     </thead>
     <% elements.forEach( element => { %>
         <tr>
             <td> <%= element.id %></td>
             <td> <%= element.name %></td>
             <td> <%= element.birthdate %></td>
             <td> <%= element.nationality %></td>
             <td> <%= element.teamId %></td>
             <td> <%= element.position %></td>
             <td> <%= element.number %></td>
             <td> <%= element.leagueId %></td>
             <td> <a href="/api/v1/players/<%= element._id%>">Ver</a></td>
             <td> <a href="/api/v1/players/edit/<%= element._id%>">Editar</a></td>
             <td> <a href="/api/v1/players/remove/<%= element._id%>">Borrar</a></td>
         </tr>
     <% }) %>
 </table>
</html>